<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="conveyor_belt">
    <static>false</static>
    <self_collide>false</self_collide>

    <!-- Base Link (fixed part of conveyor) -->
    <link name="belt_visual">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>500.0</mass>
        <inertia>
          <ixx>100.0</ixx>
          <iyy>100.0</iyy>
          <izz>100.0</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale> <!-- Rescaled to normal size -->
            <uri>model://conveyor_belt/meshes/conveyor_belt.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale> <!-- Rescaled -->
            <uri>model://conveyor_belt/meshes/conveyor_belt.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <collide_bitmask>0x01</collide_bitmask>
          </contact>
        </surface>
      </collision>
    </link>

    <!-- Moving Belt Link -->
    <link name="belt_moving">
      <pose>0 0 0.741 0 0 0</pose> <!-- âœ… matches the Z of the original base + gap -->
      <inertial>
        <mass>150.0</mass>
        <inertia>
          <ixx>10.0</ixx>
          <iyy>10.0</iyy>
          <izz>10.0</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <collision name="belt_collision">
        <geometry>
          <box>
            <size>0.425 1.2 0.00001</size> <!-- Original unscaled size -->
          </box>
        </geometry>
        <surface>
          <contact>
            <collide_bitmask>0x02</collide_bitmask>
          </contact>
          <friction>
            <ode>
              <mu>100.0</mu>
              <mu2>100.0</mu2>
            </ode>
            <torsional>
              <coefficient>1000.0</coefficient>
              <patch_radius>0.10</patch_radius> <!-- Adjusted patch radius -->
            </torsional>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Prismatic Joint -->
    <joint name="belt_joint" type="prismatic">
      <pose>0 0 0.741 0 0 0</pose> <!-- Align joint with moving belt Z -->
      <parent>belt_visual</parent>
      <child>belt_moving</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>0.0</lower>
          <upper>0.015</upper>
        </limit>
        <dynamics>
          <damping>0.01</damping>
        </dynamics>
      </axis>
      <disable_collisions>1</disable_collisions>
    </joint>

    <!-- ROS 2 Conveyor Plugin -->
    <plugin name="ros2_conveyorbelt_plugin" filename="libros2_conveyorbelt_plugin.so">
      <ros>
        <namespace></namespace>
      </ros>
      <max_velocity>1.0</max_velocity>
      <publish_rate>1000</publish_rate>
    </plugin>

  </model>
</sdf>
